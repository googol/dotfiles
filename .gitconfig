[core]
    excludesfile = ~/.gitignore_global
    editor = vim
[push]
    default = simple
[alias]
    statsu=status
    stauts=status
    ll = !exec git log --pretty='format: %C(auto) %h %G?%d %s' --abbrev-commit --graph --decorate --all --color | less -R -p 'HEAD ->'
    fp = push --force-with-lease
    fixup = commit --amend --no-edit
    ps=push
    pl=pull
    b=branch
    co=checkout
    ci=commit
    d=diff
    dd=diff --cached
    dt=difftool
    ddt=difftool --cached
    l=log
    a=add
    ft=fetch
    rb=rebase
    g=grep -i -n
    git = !exec git
    bc= !exec branch-cleanup
    hub = !exec github-open.sh
    hub-branch = !exec github-open.sh branch
    hub-pulls = !exec github-open.sh pulls
[diff]
    submodule = log
[difftool]
    prompt = false
[commit]
	verbose = true
#    gpgsign = true
[merge]
    conflictstyle = diff3
[fetch]
    recurseSubmodules = on-demand
[status]
    submoduleSummary = true
[rebase]
    autosquash = true
